{
    "globals": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-console": "off",
        "eqeqeq": "error",
        "no-unused-vars": "warn"
    }
}
